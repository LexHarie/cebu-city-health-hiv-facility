# Database
DATABASE_URL="postgresql://username:password@localhost:5432/cebu_health_db"

# Authentication
OTP_SECRET="your-random-32-character-secret-key"
SESSION_SECRET="your-random-32-character-session-key"

# Email Provider (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxx"
FROM_EMAIL="noreply@yourdomain.com"

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_PHONE_NUMBER="+1234567890"

# Background Jobs HMAC
JOBS_HMAC_SECRET="your-random-32-character-jobs-secret"

# App Environment
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Rate Limiting (Optional Redis)
REDIS_URL="redis://localhost:6379"

# Logging & Monitoring
LOG_LEVEL="info"
ENABLE_AUDIT_LOGGING="true"